{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": ["src/**/**/*"],
    "exclude": ["./node_modules", "dist"],
    "ts-node": {
        "files": true
    }
}